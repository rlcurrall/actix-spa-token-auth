################################################################################
# App Configuration
################################################################################

# Key used for hashing & encryption by application
# I copied this from https://randomkeygen.com/ though for a production app
# a key would likely need to be generated using something like:
#   https://unix.stackexchange.com/a/230676
APP_KEY="L95FqymVpvBJIdYrKDJeUAFeAX4BwDqP"

# If app is in "debug" mode, may remove...
APP_DEBUG=true

# If app is using HTTPS & Secure Cookies
APP_SECURE=false

# Domain the application lives on
APP_DOMAIN="api.my-app.test"

# Socket address for the server
APP_ADDRESS=127.0.0.1

# Port the application will run on
APP_PORT=8080

################################################################################
# CORS Configuration
################################################################################

# Origins allowed to make HTTP requests to the server
# If not set, assumes all origins are allowed
CORS_ORIGINS="my-app.test:3000"

# Methods that allowed by cross origin requests
# If not set assumes all methods are allowed
CORS_METHODS=*

# If CORS supports credentials
CORS_CREDENTIALS=true

################################################################################
# Log Configuration
################################################################################

# Max log level of messages to be logged
LOG_LEVEL=debug

################################################################################
# Database Configuration
################################################################################

# URL of application
DATABASE_URL=postgres://postgres:password@localhost/projects

################################################################################
# Token Configuration
################################################################################

# Tokens time to live, if not set, then tokens do not expire
TOKEN_TTL=120

# Dtermine if tokens refresh when used or expiration is based on creation
TOKEN_REFRESH=false
